#: import Window kivy.core.window.Window

Button:
    background_color: app.colors["tutorial"]
    background_normal: ""
    size_hint: (0.9, 0.9)
    pos_hint: {"center_x": 0.5, "center_y": 0.475}
    text: ""
    font_size: 30*app.scale_factor
    text_size: self.size
    valign: "top"
    line_height: 1.25
    padding: Window.size[0] * 0.01
    markup: True