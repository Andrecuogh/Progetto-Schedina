<StandardButton@Button>:
    size_hint: 0.5, 0.175
    background_normal: ""
    background_color: app.colors["button"]


<PredictButton@StandardButton>:
    text: "Predici"
    font_size: 60
    pos_hint: {"center_x": 0.5, "center_y": 0.275}
    on_press:
        app.sm.transition.direction = 'left'
        app.sm.current = "scorepage"
        app.add_values()
    

<LoadingButton@StandardButton>:
    text: "Caricando i dati..."
    font_size: 50
    pos_hint: {"center_x": 0.5, "center_y": 0.5}


<HomePage@Screen>:
    name: "homepage"
    FloatLayout:
        UtilBar:
        PredictButton: