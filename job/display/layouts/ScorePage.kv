<LabelButton@Button>:
    background_color: app.colors["label"]
    background_normal: ""
    font_size: 45


<ProbabilityButton@Button>:
    background_normal: ""
    font_size: 40
    text: "default"


<CustomGrid@GridLayout>:
    spacing: [2, 2]
    orientation: "rl-tb"


<NavigationButton@Button>:
    background_color: app.colors["button"]
    background_normal: ""
    size_hint: (0.2, 0.05)
    font_size: 45


<HomeButton@Button>:
    background_color: app.colors["button"]
    background_normal: ""
    size_hint: (0.08, 0.06)
    pos_hint: {"x": 0.46, "y": 0.07}
    text: "Home"
    font_size: 35
    on_press:
        app.sm.transition.direction = 'right'
        app.sm.current = "homepage"


<NavigationBar@FloatLayout>:
    name: "Navigation bar"
    canvas:
        Color:
            rgba: app.colors["button"]
        RoundedRectangle:
            pos: root.size[0] * 0.45, root.size[1] * 0.06
            size: root.size[0] * 0.1, root.size[1] * 0.08
        Ellipse:
            pos: root.size[0] * 0.09, root.size[1] * 0.05
            size: root.size[0] * 0.26, root.size[1] * 0.1
        Ellipse:
            pos: root.size[0] * 0.65, root.size[1] * 0.05
            size: root.size[0] * 0.26, root.size[1] * 0.1

    NavigationButton:
        text: "Precedente"
        pos_hint: {"x": 0.12, "y": 0.075}
        on_press:
            app.change_match(-1)

    NavigationButton:
        text: "Successivo"
        pos_hint: {"x": 0.68, "y": 0.075}
        on_press:
            app.change_match(1)

    HomeButton:


