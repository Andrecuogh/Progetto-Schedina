<LabelButton@Button>:
    background_color: app.colors["label"]
    background_normal: ""
    font_size: 60*app.scale_factor


<ProbabilityButton@Button>:
    background_color: app.colors["colorbar"][50]
    background_normal: ""
    font_size: 50*app.scale_factor
    text: "default"


<CustomGrid@GridLayout>:
    spacing: [2*app.scale_factor, 2*app.scale_factor]
    orientation: "rl-tb"


<NavigationButton@Button>:
    background_color: app.colors["button"]
    background_normal: ""
    size_hint: (0.2, 0.05)
    font_size: 45*app.scale_factor


<HomeButton@Button>:
    background_color: app.colors["button"]
    background_normal: ""
    size_hint: (0.08, 0.06)
    pos_hint: {"x": 0.46, "y": 0.05}
    text: "Home"
    font_size: 35*app.scale_factor
    on_press:
        app.sm.transition.direction = 'right'
        app.sm.current = "homepage"


<NavigationBar@FloatLayout>:
    name: "Navigation bar"
    canvas:
        Color:
            rgba: app.colors["button"]
        RoundedRectangle:
            pos: root.size[0] * 0.45, root.size[1] * 0.04
            size: root.size[0] * 0.1, root.size[1] * 0.08
        Ellipse:
            pos: root.size[0] * 0.09, root.size[1] * 0.03
            size: root.size[0] * 0.26, root.size[1] * 0.1
        Ellipse:
            pos: root.size[0] * 0.65, root.size[1] * 0.03
            size: root.size[0] * 0.26, root.size[1] * 0.1

    NavigationButton:
        text: "Precedente"
        pos_hint: {"x": 0.12, "y": 0.055}
        on_press:
            app.change_match(-1)

    NavigationButton:
        text: "Successivo"
        pos_hint: {"x": 0.68, "y": 0.055}
        on_press:
            app.change_match(1)

    HomeButton:

