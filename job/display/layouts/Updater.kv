<UpdateButton@Button>:
    background_color: app.colors["label"]
    background_normal: ""
    size_hint: (0.15, 0.1)
    font_size: 20

<Updater@Screen>:
    name: "updatebox"
    FloatLayout:
        canvas:
            Color:
                rgba: (1, 0, 0, 1)
            RoundedRectangle:
                pos: root.size[0] * 0.2, root.size[1] * 0.2
                size: root.size[0] * 0.6, root.size[1] * 0.6
            Color:
                rgba: app.colors["tutorial"]
            RoundedRectangle:
                pos: root.size[0] * 0.22, root.size[1] * 0.22
                size: root.size[0] * 0.56, root.size[1] * 0.56
        UpdateButton:
            text: "Aggiorna"
            pos_hint: {"center_x": 0.35, "center_y": 0.35}
            on_press:
                app.updater.update_app()
        UpdateButton:
            text: "Non ora"
            pos_hint: {"center_x": 0.65, "center_y": 0.35}
            on_press:
                app.sm.transition.direction = 'up'
                app.sm.current = "homepage"
        Label:
            text: "E' disponibile un nuovo aggiornamento.\nAggiornare?"
            halign: "center"
            size_hint: (0.5, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            font_size: 30
        UtilBar:


