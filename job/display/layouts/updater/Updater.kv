#:import Clock kivy.clock.Clock

<UpdateButton@Button>:
    background_color: app.colors["tutorialforth"]
    background_normal: ""
    size_hint: (0.225, 0.05)
    font_size: 60*app.sf

<Updater>:
    FloatLayout:
        canvas:
            Color:
                rgba: (1, 0, 0, 1)
            RoundedRectangle:
                pos: root.size[0] * 0.2, root.size[1] * 0.4
                size: root.size[0] * 0.6, root.size[1] * 0.3
            Color:
                rgba: app.colors["tutorialbackground"]
            RoundedRectangle:
                pos: root.size[0] * 0.22, root.size[1] * 0.406
                size: root.size[0] * 0.56, root.size[1] * 0.288
        UpdateButton:
            text: "Aggiorna"
            pos_hint: {"center_x": 0.375, "center_y": 0.45}
            on_press:
                app.updater.update_app()
                Clock.schedule_once(app.stop, 4)
        UpdateButton:
            text: "Non ora"
            pos_hint: {"center_x": 0.625, "center_y": 0.45}
            on_press:
                app.root.transition.direction = 'up'
                app.root.current = "scorepage"
                app.root.current_screen.match_id = 0
        Label:
            text: "E' disponibile un nuovo aggiornamento.\n\nAggiornare?"
            halign: "center"
            size_hint: (0.5, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            font_size: 60*app.sf
            text_size: self.size
            valign: 'middle'
        UtilBar:


