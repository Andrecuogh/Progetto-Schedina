#:include layouts/scorepage/Readme.kv
#:include layouts/scorepage/Tutorial.kv

<UtilsButton@ButtonBehavior+Label>:
    color: 'white'
    font_size: '10sp'

<UtilsIcon@ButtonBehavior+Image>:

<UtilBar>:
    tutorial_button: tutorial_button
    canvas:
        Color:
            rgba: (0, 0, 0, 0.7)
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -5*app.sf
        Color:
            rgba: app.colors["utilbar"]
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 4
    rows: 2
    orientation: "tb-lr"
    spacing: dp(2)
    padding: dp(3)
    UtilsIcon:
        source: "data/icons/officon.png"
        size_hint: (0.2, 0.7)
        on_press: if not root.parent.input_disabled: app.stop()
    UtilsButton:
        text: "Quit"
        size_hint: (0.2, 0.3)
        on_press: if not root.parent.input_disabled: app.stop()
    Label:
        size_hint: (0.2, 0.7)
    Label:
        size_hint: (0.2, 0.3)
    UtilsIcon:
        source: "data/icons/tutorialicon.png"
        size_hint: (0.2, 0.7)
        on_release: self.parent.load_tutorial()
    UtilsButton:
        id: tutorial_button
        size_hint: (0.2, 0.3)
        text: "Help"
        on_release: self.parent.load_tutorial()
    UtilsIcon:
        source: "data/icons/infoicon.png"
        size_hint: (0.2, 0.7)
        on_release: self.parent.load_readme()
    UtilsButton:
        text: "About"
        size_hint: (0.2, 0.3)
        on_release: self.parent.load_readme()
