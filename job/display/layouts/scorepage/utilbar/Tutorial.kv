<Tutorial>:
    text_area: text_area
    skipbutton: skipbutton
    canvas:
        Color:
            rgb: app.colors["button"]
            a: 0.9
        Rectangle:
        Rectangle:
        Rectangle:
    Label:
        id: text_area
        text_size: self.size
        font_size: 50*app.sf
        valign: "top"
    Button:
        id: skipbutton
        pos_hint: {"x": 0.04, "y": 0.3}
        size_hint: (0.92, 0.1)
        background_color: "blue"
        background_normal: ""
        bold: True
        on_press: root.parent.utilbar.skip_tutorial()

