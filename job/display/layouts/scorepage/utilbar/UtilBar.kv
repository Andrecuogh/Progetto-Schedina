#:include layouts/scorepage/utilbar/Readme.kv
#:include layouts/scorepage/utilbar/Tutorial.kv

<UtilsButton@Button>:
    background_color: app.colors["button"]
    background_normal: ""
    font_size: 80*app.sf
    bold: True


<UtilBar>:
    pad: 5
    tutorial_button: tutorial_button
    canvas:
        Color:
            rgba: app.colors["utilbar"]
        RoundedRectangle:
            pos: self.parent.size[0] * 0.01, self.parent.size[1] * 0.90
            size: ((self.parent.size[0] * 1.00) - (self.pad*2*app.sf), (self.parent.size[1] * 0.10) - (self.pad*2*app.sf))
    cols: 3
    pos_hint: {'x': 0.00, 'y': 0.90}
    size_hint: 1.00, 0.10
    spacing: [20*app.sf, 0*app.sf]
    padding: 50*app.sf
    UtilsButton:
        id: tutorial_button
        text: "Help"
        on_release:
            self.parent.load_tutorial()    
    UtilsButton:
        text: "About"
        on_release:
            self.parent.load_readme()
    UtilsButton:
        text: "Quit"
        on_press:
            if not root.parent.input_disabled: app.stop()
