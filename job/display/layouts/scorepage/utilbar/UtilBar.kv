#:include layouts/scorepage/utilbar/Readme.kv
#:include layouts/scorepage/utilbar/Tutorial.kv

<UtilsButton@Button>:
    background_color: app.colors["button"]
    background_normal: ""
    font_size: 80*app.sf
    bold: True
    canvas:
        Color:
            rgba: (0.8, 0.8, 0.8, 0.9)
        BoxShadow:
            inset: True
            pos: self.pos
            size: self.size
            offset: 0, -5*app.sf
            blur_radius: 20*app.sf


<UtilBar>:
    tutorial_button: tutorial_button
    canvas:
        Color:
            rgba: (0, 0, 0, 0.7)
        BoxShadow:
            pos: self.parent.size[0] * 0.02, self.parent.size[1] * 0.905
            size: self.parent.size[0] * 0.96, self.parent.size[1] * 0.070
            offset: 0, -5*app.sf
        Color:
            rgba: app.colors["utilbar"]
        RoundedRectangle:
            pos: self.parent.size[0] * 0.01, self.parent.size[1] * 0.905
            size: self.parent.size[0] * 0.98, self.parent.size[1] * 0.090
    cols: 3
    pos_hint: {'x': 0.00, 'y': 0.90}
    size_hint: 1.00, 0.10
    spacing: [20*app.sf, 0*app.sf]
    padding: 50*app.sf
    UtilsButton:
        id: tutorial_button
        text: "Help"
        on_release:
            self.parent.load_tutorial()    
    UtilsButton:
        text: "About"
        on_release:
            self.parent.load_readme()
    UtilsButton:
        text: "Quit"
        on_press:
            if not root.parent.input_disabled: app.stop()
