<NavigationLabel@BasicButton>:
    bold: True
    font_size: '14sp'

<NavigationImage@ButtonBehavior+Image>:

<WarningIcon>:
    NavigationImage:
        source: "data/icons/warning.png"
        pos_hint: {"x": 0.6, "y": 0.84}
        size_hint: (0.075, 0.075)
        always_release: True
        on_press: root.poppingup()
        on_release: root.poppingdown()     

<WarningPopup>:
    BasicButton:
        pos_hint: {"center_x": 0.5, "y": 0.775}
        size_hint: (0.8, 0.15)
        background_color: "tutorialbackground"
        text: "L'algoritmo ha bisogno di 5 incontri precedenti per poter calcolare le probabilità. Dato che ancora non ci sono state 5 partite i dati mancanti sono stati riempiti con i risultati delle amichevoli precampionato"
        valign: "top"
        font_size: '14sp'

<PageNavigator>:
    match: match
    proba_button: proba_button
    accessory_button: accessory_button
    cols: 1
    rows: 2
    canvas.before:
        Color:
            rgba: (0, 0, 0, 0.9)
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -dp(2)
            blur_radius: dp(5)
        Color:
            rgba: app.colors['navigationbar']
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 3
        padding: dp(5)
        NavigationImage:
            source: "data/icons/leftarrow.png"
            on_press: root.parent.resultbox.change_match("down")
        Label:
            id: match
            text: "DEF - DEF"
            bold: True    
        NavigationImage:
            source: "data/icons/rightarrow.png"
            on_press: root.parent.resultbox.change_match("up")   
    GridLayout:
        cols: 2
        NavigationLabel:
            id: proba_button
            text: "Probabilità"
            background_color: app.colors["navigationbarpressed"]
            on_press: root.parent.resultbox.change_screen("right")
        NavigationLabel:
            id: accessory_button
            text: "Momento di forma"
            background_color: app.colors["navigationbar"]
            on_press: root.parent.resultbox.change_screen("left")
           
    
            