<Ranking@FloatLayout>:
    area: "Ranking"     
    GridLayout:
        pos_hint: {'x': 0.05, 'y': 0.35}
        size_hint: (0.9, 0.05)
        cols: 5
        orientation: 'lr-tb'
        PrevLabelButton:
            text: ""
        PrevLabelButton:
            text: "squadra"
        PrevLabelButton:
            text: "punti"
        PrevLabelButton:
            text: "Gf"
        PrevLabelButton:
            text: "Gs"
    RecycleView:
        pos_hint: {'x': 0.05, 'y': 0.05}
        size_hint: (0.9, 0.3)
        viewclass: 'Button'
        data: [{"text": x, "background_normal": "", "font_size": 60*app.sf} for x in app.dp.get_ranking().label]
        RecycleGridLayout:
            default_size_hint: 1, 1
            size: (root.size[0], root.size[1])
            size_hint_y: None
            rows: 20
            cols: 5
            scroll_y: 0
            orientation: 'lr-tb'
            do_scroll_x: False
            always_overscroll: False
            spacing: (0, 10*app.sf) 