<MomentumButton@Button>:
    background_color: app.colors["colorbar"][50]
    background_normal: ""
    font_size: 50*app.sf
    text: "default"
    halign: "center"
    markup: True
    

<MomLabelButton@Button>:
    background_color: app.colors["label"]
    background_normal: ""
    font_size: 50*app.sf


<Momentum@FloatLayout>:
    area: "momentum"
    MomLabelButton:
        pos_hint: {'x': 0.05, 'y': 0.641}
        size_hint: (0.9, 0.04)
        markup: True
        win_string: "W: [font=arial][color=#DAA520]██[/color][/font]   "
        draw_string: "D: [font=arial][color=#088F8F]██[/color][/font]   "
        loss_string: "L: [font=arial][color=#E97451]██[/color][/font]"
        text: "Risultati precedenti   " + self.win_string + self.draw_string + self.loss_string
    GridLayout:
        cols: 1
        pos_hint: {'x': 0.05, 'y': 0.6}
        size_hint: (0.10, 0.04)
        spacing: 3*app.sf
        padding: 1*app.sf 
        PrevLabelButton:
            text: ""
    GridLayout:
        pos_hint: {'x': 0.05, 'y': 0.44}
        size_hint: (0.10, 0.160)
        rows: 2 
        spacing: 3*app.sf
        padding: 1*app.sf 
        PrevLabelButton:
            text: "Home"  
        PrevLabelButton:
            text: "Away"   
    GridLayout:
        pos_hint: {'x': 0.15, 'y': 0.6}
        size_hint: (0.80, 0.04)
        cols: 5
        spacing: 3*app.sf
        padding: 1*app.sf 
        MomLabelButton:
            text: "1"
        MomLabelButton:
            text: "2"
        MomLabelButton:
            text: "3"
        MomLabelButton:
            text: "4"
        MomLabelButton:
            text: "5"
    GridLayout:
        pos_hint: {'x': 0.15, 'y': 0.44}
        size_hint: (0.80, 0.160)
        cols: 5
        rows: 2
        spacing: 3*app.sf
        padding: 1*app.sf 
        orientation: "rl-bt"
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
