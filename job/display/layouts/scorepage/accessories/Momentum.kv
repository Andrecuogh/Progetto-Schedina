<MomentumButton@ProbabilityButton>:
    halign: "center"
    markup: True


<Momentum@FloatLayout>:
    area: "momentum"
    PrevLabelButton:
        pos_hint: {'x': 0.05, 'y': 0.641}
        size_hint: (0.9, 0.04)
        markup: True
        win_string: "W: [font=arial][color=#DAA520]██[/color][/font]   "
        draw_string: "D: [font=arial][color=#088F8F]██[/color][/font]   "
        loss_string: "L: [font=arial][color=#E97451]██[/color][/font]"
        text: "Risultati precedenti   " + self.win_string + self.draw_string + self.loss_string
    GridLayout:
        cols: 1
        pos_hint: {'x': 0.05, 'y': 0.6}
        size_hint: (0.10, 0.04)
        spacing: 3*app.sf
        padding: 1*app.sf 
        PrevLabelButton:
            text: ""
    GridLayout:
        pos_hint: {'x': 0.05, 'y': 0.44}
        size_hint: (0.10, 0.160)
        rows: 2 
        spacing: 3*app.sf
        padding: 1*app.sf 
        PrevLabelButton:
            text: "Home"  
        PrevLabelButton:
            text: "Away"   
    GridLayout:
        pos_hint: {'x': 0.15, 'y': 0.6}
        size_hint: (0.80, 0.04)
        cols: 5
        spacing: 3*app.sf
        padding: 1*app.sf 
        PrevLabelButton:
            text: "1"
        PrevLabelButton:
            text: "2"
        PrevLabelButton:
            text: "3"
        PrevLabelButton:
            text: "4"
        PrevLabelButton:
            text: "5"
    GridLayout:
        pos_hint: {'x': 0.15, 'y': 0.44}
        size_hint: (0.80, 0.160)
        cols: 5
        rows: 2
        spacing: 3*app.sf
        padding: 1*app.sf 
        orientation: "rl-bt"
