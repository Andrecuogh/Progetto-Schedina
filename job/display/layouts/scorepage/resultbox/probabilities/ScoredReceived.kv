<ScoredReceived>:
    scored: scored
    received: received
    home: home
    away: away
    pad: 5
    canvas:
        Color:
            rgba: (0, 0, 0, 0.7)
        BoxShadow:
            pos: self.parent.size[0] * 0.05, self.parent.size[1] * 0.665
            size: self.parent.size[0] * 0.9, self.parent.size[1] * 0.275
            offset: 0, -10*app.sf
        Color:
            rgba: app.colors["background_shadow"]
        Rectangle:
            pos: self.parent.size[0] * 0.05, self.parent.size[1] * 0.665
            size: self.parent.size[0] * 0.9, self.parent.size[1] * 0.275
    GridLayout:
        spacing: 10*app.sf
        padding: 5*app.sf
        orientation: "rl-tb"
        rows: 3
        pos_hint: {"x": 0.05, "y": 0.665}
        size_hint: (0.15, 0.275)
        LabelButton:
            text: "GOL"
            font_size: 50*app.sf
            size_hint_y: 0.075
        LabelButton:
            id: home
            text: "Home"
            font_size: 50*app.sf
            size_hint_y: 0.1
        LabelButton:
            id: away
            text: "Away"
            font_size: 50*app.sf
            size_hint_y: 0.1
    CustomGrid: 
        cols: 5
        pos_hint: {"x": 0.2, "y": 0.865}
        size_hint: (0.75, 0.075)
        LabelButton:
            text: "4"
        LabelButton:
            text: "3"
        LabelButton:
            text: "2"
        LabelButton:
            text: "1"
        LabelButton:
            text: "0"
    CustomGrid:
        id: scored
        cols: 5
        pos_hint: {"x": 0.2, "y": 0.765}
        size_hint: (0.75, 0.1)
        ProbabilityButton:
        ProbabilityButton:
        ProbabilityButton:
        ProbabilityButton:
        ProbabilityButton:
    CustomGrid:
        id: received
        cols: 5
        pos_hint: {"x": 0.2, "y": 0.665}
        size_hint: (0.75, 0.1)
        ProbabilityButton:
        ProbabilityButton:
        ProbabilityButton:
