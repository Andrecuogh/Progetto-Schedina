#:include layouts/scorepage/resultbox/probabilities/ScoredReceived.kv
#:include layouts/scorepage/resultbox/probabilities/1X2.kv
#:include layouts/scorepage/resultbox/probabilities/GolNoGol.kv
#:include layouts/scorepage/resultbox/probabilities/OverUnder.kv

<LabelButton@Button>:
    background_color: app.colors["label"]
    background_normal: ""
    background_disabled_normal: ""
    disabled_color: [1, 1, 1, 1]
    font_size: 70*app.sf


<ProbabilityButton@Button>:
    background_color: app.colors["colorbar"][50]
    background_normal: ""
    background_disabled_normal: ""
    disabled_color: [1, 1, 1, 1]
    font_size: 60*app.sf
    text: "default"


<CustomGrid@GridLayout>:
    spacing: 2*app.sf
    padding: 5*app.sf
    orientation: "rl-tb"


<ProbabilityScreen>:
    gfgs: gfgs
    oxt: oxt
    ggng: ggng
    ou: ou
    disabled: True
    ScoredReceived:
        id: gfgs
    OneXTwo:
        id: oxt
    GolNoGol:
        id: ggng
    OverUnder:
        id: ou
