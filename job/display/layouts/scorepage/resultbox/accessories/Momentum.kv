<MomentumButton@Button>:
    background_color: app.colors["colorbar"][50]
    background_normal: ""
    font_size: 50*app.sf
    text: ""
    halign: "center"
    markup: True
    background_disabled_normal: ""
    disabled_color: [1, 1, 1, 1]
    

<MomLabelButton@Button>:
    background_color: app.colors["label"]
    background_normal: ""
    font_size: 50*app.sf
    background_disabled_normal: ""
    disabled_color: [1, 1, 1, 1]


<Momentum>:
    home: home
    away: away
    grid: grid
    canvas:
        Color:
            rgba: (0, 0, 0, 0.7)
        BoxShadow:
            pos: self.parent.size[0] * 0.05, self.parent.size[1] * 0.44
            size: self.parent.size[0] * 0.9, self.parent.size[1] * 0.241
            offset: 0, -10*app.sf
        Color:
            rgba: app.colors["background_shadow"]
        Rectangle:
            pos: self.parent.size[0] * 0.05, self.parent.size[1] * 0.44
            size: self.parent.size[0] * 0.9, self.parent.size[1] * 0.241
    GridLayout:
        rows: 1
        padding: 3*app.sf
        pos_hint: {'x': 0.05, 'y': 0.641}
        size_hint: (0.9, 0.04)
        MomLabelButton:
            markup: True
            win_string: "W: [font=arial][color=#DAA520]██[/color][/font]   "
            draw_string: "D: [font=arial][color=#088F8F]██[/color][/font]   "
            loss_string: "L: [font=arial][color=#E97451]██[/color][/font]"
            text: "Risultati precedenti   " + self.win_string + self.draw_string + self.loss_string
    GridLayout:
        cols: 1
        pos_hint: {'x': 0.05, 'y': 0.6}
        size_hint: (0.10, 0.04)
        spacing: 3*app.sf
        padding: [5*app.sf, 0, 5*app.sf, 1*app.sf]
        disabled: True
        PrevLabelButton:
            text: ""
    GridLayout:
        pos_hint: {'x': 0.05, 'y': 0.44}
        size_hint: (0.10, 0.160)
        rows: 2 
        spacing: 3*app.sf
        padding: 5*app.sf 
        disabled: True
        PrevLabelButton:
            id: home
            text: "Home"  
        PrevLabelButton:
            id: away
            text: "Away"   
    GridLayout:
        pos_hint: {'x': 0.15, 'y': 0.6}
        size_hint: (0.80, 0.04)
        cols: 5
        spacing: 3*app.sf
        padding: [5*app.sf, 0, 5*app.sf, 1*app.sf]
        disabled: True
        MomLabelButton:
            text: "1"
        MomLabelButton:
            text: "2"
        MomLabelButton:
            text: "3"
        MomLabelButton:
            text: "4"
        MomLabelButton:
            text: "5"
    GridLayout:
        id: grid
        pos_hint: {'x': 0.15, 'y': 0.44}
        size_hint: (0.80, 0.160)
        cols: 5
        rows: 2
        spacing: 3*app.sf
        padding: 5*app.sf 
        orientation: "rl-bt"
        disabled: True
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton:
        MomentumButton: