#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<Ranking>:
    grid: grid
    cst_fsize: 60*app.sf
    canvas:
        Color:
            rgba: (0, 0, 0, 0.7)
        BoxShadow:
            pos: self.parent.size[0] * 0.05, self.parent.size[1] * 0.05
            size: self.parent.size[0] * 0.9, self.parent.size[1] * 0.35
            offset: 0, -10*app.sf
        Color:
            rgba: app.colors["background_shadow"]
        Rectangle:
            pos: self.parent.size[0] * 0.05, self.parent.size[1] * 0.05
            size: self.parent.size[0] * 0.9, self.parent.size[1] * 0.35
    GridLayout:
        pos_hint: {'x': 0.05, 'y': 0.35}
        size_hint: (0.9, 0.05)
        cols: 5
        padding: 5*app.sf
        orientation: 'lr-tb'
        PrevLabelButton:
            text: ""
        PrevLabelButton:
            text: "squadra"
        PrevLabelButton:
            text: "punti"
        PrevLabelButton:
            text: "Gf"
        PrevLabelButton:
            text: "Gs"
    RecycleView:
        id: grid
        pos_hint: {'x': 0.05, 'y': 0.05}
        size_hint: (0.9, 0.3)
        viewclass: 'Button'
        data: [{"background_normal": "", "font_size": root.cst_fsize} for _ in range(100)]
        effect_y: ScrollEffect()
        effect_x: ScrollEffect()
        RecycleGridLayout:
            default_size_hint: 1, 1
            size: (root.size[0], root.size[1])
            size_hint_y: None
            rows: 20
            cols: 5
            scroll_y: 0
            orientation: 'lr-tb'
            do_scroll_x: False
            always_overscroll: False
            spacing: (0, 10*app.sf) 
            padding: 5*app.sf