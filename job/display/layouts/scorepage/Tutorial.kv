<CircleButton@BasicButton>:
    color: app.colors["tutorialpages"]
    background_color: [1, 1, 1, 0]

<FakeCircle@BasicButton>:
    text: ""
    background_color: [1, 1, 1, 0]
    font_size: '14sp'

<Tutorial>:
    text_area: text_area
    skipbutton: skipbutton.__self__
    startbutton: startbutton.__self__
    circle_grid: circle_grid
    canvas:
        Color:
            rgb: app.colors["tutorialbackground"]
            a: 0.9
        Rectangle:
        Rectangle:
        Rectangle:
    Label:
        id: text_area
        text_size: self.size
        font_size: 50*app.sf
        valign: "top"
    Button:
        id: skipbutton
        text: "Exit"
        pos_hint: {"x": 0.1, "y": 0.3}
        size_hint: (0.80, 0.1)
        background_color: app.colors["tutorialback"]
        background_normal: ""
        bold: True
        on_press: root.parent.utilbar.skip_tutorial()
    Button:
        id: startbutton
        text: "Start"
        pos_hint: {"x": 0.1, "y": 0.425}
        size_hint: (0.80, 0.1)
        background_color: app.colors["tutorialforth"]
        background_normal: ""
        bold: True
        on_press: root.page_index += 1
    GridLayout:
        id: circle_grid
        orientation: "rl-tb"
        pos_hint: {"x": 0.1, "y": 0.0}
        size_hint: (0.8, 0.04)
        cols: 11
        rows: 1
        FakeCircle:
        CircleButton:
        CircleButton:
        CircleButton:
        CircleButton:
        CircleButton:
        CircleButton:
        CircleButton:
        CircleButton:
        CircleButton:
        FakeCircle:

