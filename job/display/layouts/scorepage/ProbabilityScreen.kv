

<ProbabilityButton@BasicButton>:
    background_color: app.colors["colorbar"][50]
    font_size: '16sp'

<ProbabilityGrid@GridLayout>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 0.8)
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -dp(2)
            blur_radius: dp(4)
        Color:
            rgba: app.colors["background_shadow"]
        Rectangle:
            pos: self.pos
            size: self.size
    padding: [dp(2), dp(1)]

